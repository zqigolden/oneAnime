<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.zqigolden.oneanime</id>

  <name>OneAnime</name>
  <summary>Watch and manage anime collections</summary>

  <description>
    <p>
      OneAnime is a clean and ad-free anime streaming application built with Flutter.
      It follows Material You design guidelines and provides a seamless experience for watching anime.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Anime catalog browsing</li>
      <li>Search functionality</li>
      <li>Episode scheduling</li>
      <li>Video player with hardware acceleration</li>
      <li>Danmaku (bullet comments) support</li>
      <li>Watch list management</li>
      <li>Multiple playback speeds</li>
      <li>Dark/Light theme support</li>
    </ul>
  </description>

